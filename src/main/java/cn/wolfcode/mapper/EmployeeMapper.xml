<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.wolfcode.mapper.EmployeeMapper" >
  <resultMap id="BaseResultMap" type="cn.wolfcode.domain.Employee" >
    <id column="id" property="id" />
    <result column="name" property="name" />
    <result column="tel" property="tel" />
    <result column="email" property="email" />
  </resultMap>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long" >
    delete from `employee`
    where id = #{id}
  </delete>
  <insert id="insert" parameterType="cn.wolfcode.domain.Employee" useGeneratedKeys="true" keyProperty="id" >
    insert into `employee` (name, tel, email)
    values (#{name}, #{tel}, #{email})
  </insert>
  <update id="updateByPrimaryKey" parameterType="cn.wolfcode.domain.Employee" >
    update `employee`
    set name = #{name},
      tel = #{tel},
      email = #{email}
    where id = #{id}
  </update>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select id, name, tel, email
    from `employee`
    where id = #{id}
  </select>
  <select id="selectAll" resultMap="BaseResultMap" >
    select id, name, tel, email
    from `employee`
  </select>
  <select id="queryForCount" resultType="java.lang.Integer">
    select count(id)
    from employee
  </select>
  <select id="queryForList"  resultMap="BaseResultMap">
    select id, name, tel, email
    from `employee`
    LIMIT #{start},#{rows}
  </select>
</mapper>